<% chats.each do |chat| %>
  <%= link_to chat, class: 'chat-preview' + if @rounded_top == chat.id
                                              ' rounded-top'
                                            elsif @rounded_bottom == chat.id
                                              ' rounded-bottom'
                                            elsif @selected == chat.id
                                              ' selected'
                                            else
                                              ''
                                            end do %>
   <%= render chat, from_stream: false %>
  <% end %>
<% end %>
